// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String

  @@unique([userId])
}

model Guild {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  guildId  String
  language String? @default("en-US")

  @@unique([guildId])
}
